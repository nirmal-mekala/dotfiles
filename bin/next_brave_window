#!/usr/bin/env bash

if [[ "$(uname)" != "Darwin" ]]; then
    echo "sry mac only" >&2
    exit 1
fi

osascript <<EOF
tell application "System Events"
    set isActive to (name of first application process whose frontmost is true) is "Brave Browser"
end tell

tell application "Brave Browser"
    if isActive then
        set winList to every window
        if (count of winList) > 0 then
            set theWindow to last item of winList
            set index of theWindow to 1
        end if
    else
        activate
    end if
end tell
EOF
